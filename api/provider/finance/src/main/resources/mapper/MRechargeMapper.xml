<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yrsoft.finance.dao.MRechargeDao">

    <resultMap type="com.yrsoft.finance.entity.MRecharge" id="MRechargeResult">
    <result property="id"  column="id" javaType="String"/>
    <result property="memberId"  column="member_id" javaType="String"/>
    <result property="orderId"  column="order_id" javaType="String"/>
    <result property="rechargeType"  column="recharge_type" javaType="Integer"/>
    <result property="rechargeAmount"  column="recharge_amount" javaType="Long"/>
    <result property="rechargeTime"  column="recharge_time" javaType="Integer"/>
    <result property="state"  column="state" javaType="Integer"/>
    <result property="fundAccId"  column="fund_acc_id" javaType="String"/>
    <result property="remarks"  column="remarks" javaType="String"/>
    </resultMap>
	
	<sql id="selectMRechargeVo">
        select id, member_id, order_id, recharge_type, recharge_amount, recharge_time, state, fund_acc_id, remarks from f_recharge
    </sql>
	

    <select id="selectMRechargeById" parameterType="String" resultMap="MRechargeResult">
        <include refid="selectMRechargeVo"/>
        where id = #{id}
    </select>

	<select id="selectMRechargeList" parameterType="MRecharge"
		resultMap="MRechargeResult">
		<include refid="selectMRechargeVo" />
		<where>
			<if test="id != null  and id != '' "> and id = #{id}</if>
			<if test="memberId != null  and memberId != '' "> and member_id = #{memberId}</if>
			<if test="orderId != null  and orderId != '' "> and order_id = #{orderId}</if>
			<if test="rechargeType != null "> and recharge_type = #{rechargeType}</if>
			<if test="rechargeAmount != null "> and recharge_amount = #{rechargeAmount}</if>
			<if test="rechargeTime != null "> and recharge_time = #{rechargeTime}</if>
			<if test="state != null "> and state = #{state}</if>
			<if test="fundAccId != null  and fundAccId != '' "> and fund_acc_id = #{fundAccId}</if>
			<if test="remarks != null  and remarks != '' "> and remarks = #{remarks}</if>
		</where>
		order by recharge_time DESC
	</select>
    
    <insert id="insertMRecharge" parameterType="MRecharge">
        insert into f_recharge
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="id != null  and id != ''  ">id,</if>
			<if test="memberId != null  and memberId != ''  ">member_id,</if>
			<if test="orderId != null  and orderId != ''  ">order_id,</if>
			<if test="rechargeType != null  ">recharge_type,</if>
			<if test="rechargeAmount != null  ">recharge_amount,</if>
			<if test="rechargeTime != null  ">recharge_time,</if>
			<if test="state != null  ">state,</if>
			<if test="fundAccId != null  and fundAccId != ''  ">fund_acc_id,</if>
			<if test="remarks != null  and remarks != ''  ">remarks,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
			<if test="id != null  and id != ''  ">#{id},</if>
			<if test="memberId != null  and memberId != ''  ">#{memberId},</if>
			<if test="orderId != null  and orderId != ''  ">#{orderId},</if>
			<if test="rechargeType != null  ">#{rechargeType},</if>
			<if test="rechargeAmount != null  ">#{rechargeAmount},</if>
			<if test="rechargeTime != null  ">#{rechargeTime},</if>
			<if test="state != null  ">#{state},</if>
			<if test="fundAccId != null  and fundAccId != ''  ">#{fundAccId},</if>
			<if test="remarks != null  and remarks != ''  ">#{remarks},</if>
         </trim>
    </insert>
	 
    <update id="updateMRecharge" parameterType="MRecharge">
        update f_recharge
       <set>
            <if test="memberId != null  and memberId != ''  ">member_id = #{memberId},</if>
            <if test="orderId != null  and orderId != ''  ">order_id = #{orderId},</if>
            <if test="rechargeType != null  ">recharge_type = #{rechargeType},</if>
            <if test="rechargeAmount != null  ">recharge_amount = #{rechargeAmount},</if>
            <if test="rechargeTime != null  ">recharge_time = #{rechargeTime},</if>
            <if test="state != null  ">state = #{state},</if>
            <if test="fundAccId != null  and fundAccId != ''  ">fund_acc_id = #{fundAccId},</if>
            <if test="remarks != null  and remarks != ''  ">remarks = #{remarks},</if>
       </set>
        where id = #{id}
    </update>


    <update id="updateMRechargeByIds"  parameterType="java.util.Map">
        UPDATE f_recharge
        <set>
           <if test="memberId != null  and memberId != ''  ">member_id = #{memberId},</if>
           <if test="orderId != null  and orderId != ''  ">order_id = #{orderId},</if>
           <if test="rechargeType != null  ">recharge_type = #{rechargeType},</if>
           <if test="rechargeAmount != null  ">recharge_amount = #{rechargeAmount},</if>
           <if test="rechargeTime != null  ">recharge_time = #{rechargeTime},</if>
           <if test="state != null  ">state = #{state},</if>
           <if test="fundAccId != null  and fundAccId != ''  ">fund_acc_id = #{fundAccId},</if>
           <if test="remarks != null  and remarks != ''  ">remarks = #{remarks},</if>
        </set>
        WHERE  id in
        <foreach item="id" collection="ids" open="(" separator="," close=")">
            #{id}
        </foreach>


    </update>

	
    <delete id="deleteMRechargeByIds" parameterType="String">
        delete from f_recharge where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
    
</mapper>